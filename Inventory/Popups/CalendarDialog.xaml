<Window x:Class="Inventory.Popups.CalendarDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory.Popups"
        mc:Ignorable="d"
        Title="Select Date" SizeToContent="Height" Width="201.136" ResizeMode="NoResize">
    <DockPanel Height="auto" >
        <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,0,5,0">
            <Calendar x:Name="selectionCalendar" SelectedDatesChanged="selectionCalendar_SelectedDatesChanged"/>
        </DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Height="40" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,0,5,0">
            <Button x:Name="selectButton" IsEnabled="False" Content="Select" FontSize="18" Margin="5,5,5,5" Padding="5,0,5,0" Click="OKButton_Click" />
            <Button Content="Cancel" FontSize="18" Margin="5,5,5,5" Padding="5,0,5,0" IsCancel="True" HorizontalAlignment="Stretch" />
        </StackPanel>
    </DockPanel>
</Window>
