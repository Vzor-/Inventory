<Window x:Class="Inventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory"
        mc:Ignorable="d"
        Title="Inventory System V0.1" Height="720" Width="1080">
    <Grid Background="#272727">
        <TabControl x:Name="tabControl" Margin="0,0,0,0" Background="#FF272727" BorderBrush="#FF272727" Foreground="#FF272727">
            <TabItem Header="  Home  ">
                <local:Home/>
            </TabItem>
            <TabItem Header="  Products  ">
                <local:Products/>
            </TabItem>
            <TabItem Header="  Stock  ">
                <local:Stock/>
            </TabItem>
            <TabItem Header="  Jobs  ">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="  Orders  ">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="  Losses  ">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
