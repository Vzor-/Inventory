<UserControl x:Class="Inventory.JobPages.JobsMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inventory"
             xmlns:jobpages="clr-namespace:Inventory.JobPages"
             mc:Ignorable="d" 
             d:DesignHeight="653" d:DesignWidth="1058" Background="#272727">

    <DockPanel Margin="5" >

        <TabControl x:Name="jobsTabControl" SelectionChanged="jobsTabControl_SelectionChanged" >
            <TabItem Header="  Overview  " >
                <jobpages:JobsOverview x:Name="jobsOverviewTab"/>
            </TabItem>
            <TabItem Header="  Place New  " >
                <jobpages:JobAdd/>
            </TabItem>
         </TabControl>

    </DockPanel>
</UserControl>
